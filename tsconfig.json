{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"]
    },
    "outDir": "./dist" // Adiciona esta linha para definir a pasta de sa√≠da
  },
  "include": ["server", "shared"] // Diz ao compilador para incluir estas pastas
}
