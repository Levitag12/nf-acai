{
  "name": "fullstack-template",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx server/index.ts",
    "dev:client": "npm run dev --prefix client",
    "build:client": "npm run build --prefix client",
    "build:server": "esbuild server/index.ts --platform=node --bundle --format=esm --outdir=dist",
    "build": "./build.sh",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "concurrently": "^8.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "esbuild": "^0.19.2",
    "tsx": "^4.7.0",
    "typescript": "^5.1.6",
    "vite": "^4.0.0",
    "@vitejs/plugin-react": "^4.0.0"
  }
}