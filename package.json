{
  "name": "taskmaster",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV=development tsx server/index.ts",
    "build": "vite build --config client/vite.config.ts && esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outfile=dist/index.js",
    "start": "NODE_ENV=production node dist/index.js",
    "check": "tsc",
    "db:push": "drizzle-kit push",
    "seed": "tsx scripts/seed.ts",
    "postinstall": "npm install && cd client && npm install && npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "vite": "^5.2.0",
    "esbuild": "^0.19.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  }
}
