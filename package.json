  "scripts": {
    "dev": "NODE_ENV=development tsx server/index.ts",
    "build": "vite build --config client/vite.config.ts && esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outfile=dist/index.js",
    "start": "NODE_ENV=production node dist/index.js",
    "check": "tsc",
    "db:push": "drizzle-kit push",
    "seed": "tsx scripts/seed.ts",
    "postinstall": "cd client && npm install && npm run build && cd .. && npm run build"
  },
  "dependencies": {
    // (mantém os mesmos pacotes que você enviou, sem alterações)
  },
  "devDependencies": {
    // (mantém os mesmos devDependencies que você já tem)
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  }
}
